<div class="navbar-wagon fixed-position">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "dr_bone.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to "Mode vision", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Mode edition", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Se deconnecter", destroy_user_session_path, method: :delete, data: { confirm: "Antoine, tu te déconnectes ?"}, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->

    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Connexion Admin", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <% if user_signed_in?%>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Mode vision</a></li>
          <li><a href="#">Mode edition</a></li>
          <li><%= link_to "Se deconnecter", destroy_user_session_path, method: :delete, data: { confirm: "Antoine, tu te déconnectes ?"}, class: "navbar-wagon-item navbar-wagon-link" %></li>
        </ul>
      <% else %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Connexion Admin</a></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

